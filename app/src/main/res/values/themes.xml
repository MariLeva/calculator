<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/keyboard</item>
        <item name="radioButtonStyle">@style/rb_theme</item>
    </style>

    <style name="keyboard" parent="Widget.MaterialComponents.Button">
        <item name="android:insetLeft">@dimen/button_border</item>
        <item name="android:insetTop">@dimen/button_border</item>
        <item name="android:insetRight">@dimen/button_border</item>
        <item name="android:insetBottom">@dimen/button_border</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="backgroundTint">@color/purple_700</item>
    </style>

    <style name="rb_theme" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">@dimen/rb_size_text</item>
    </style>

    <style name="MyStyle" parent="Theme.Calculator">
        <item name="android:textSize">@dimen/size_text</item>
        <item name="android:fontFamily">"@font/fascinate"</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="myThemeBlue" parent="Theme.Calculator">
        <item name="android:navigationBarColor">@color/blue_500</item>
        <item name="colorPrimary">@color/blue_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/blue_100</item>
        <item name="colorOnPrimaryContainer">@color/blue_900</item>
        <item name="colorPrimaryInverse">@color/blue_200</item>
        <item name="colorSecondary">@color/blue_600</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/blue_100</item>
        <item name="colorOnSecondaryContainer">@color/blue_900</item>
        <item name="colorTertiary">@color/blue_600</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/blue_100</item>
        <item name="colorOnTertiaryContainer">@color/blue_900</item>
        <item name="android:statusBarColor">@color/blue_800</item>
    </style>

    <style name="myThemeGreen" parent="Theme.Calculator">
        <item name="android:navigationBarColor">@color/green_500</item>
        <item name="colorPrimary">@color/green_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/green_100</item>
        <item name="colorOnPrimaryContainer">@color/green_900</item>
        <item name="colorPrimaryInverse">@color/green_200</item>
        <item name="colorSecondary">@color/green_600</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/green_100</item>
        <item name="colorOnSecondaryContainer">@color/green_900</item>
        <item name="colorTertiary">@color/green_600</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/green_100</item>
        <item name="colorOnTertiaryContainer">@color/green_900</item>
        <item name="android:statusBarColor">@color/green_800</item>
    </style>

    <style name="myThemePurple" parent="Theme.Calculator">
        <item name="android:navigationBarColor">@color/purple_500</item>
        <item name="colorPrimary">@color/purple_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/purple_100</item>
        <item name="colorOnPrimaryContainer">@color/purple_900</item>
        <item name="colorPrimaryInverse">@color/purple_200</item>
        <item name="colorSecondary">@color/purple_600</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/purple_100</item>
        <item name="colorOnSecondaryContainer">@color/purple_900</item>
        <item name="colorTertiary">@color/purple_600</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/purple_100</item>
        <item name="colorOnTertiaryContainer">@color/purple_900</item>
        <item name="android:statusBarColor">@color/purple_800</item>
    </style>
</resources>